---
type Props = {
	href: string;
	title: string;
	description: string;
	image: string;
	tag?: string;
};

const { href, title, description, image, tag } = Astro.props;
---

<a class="link-card" href={href} target="_blank" rel="noreferrer">
	<div class="link-card__content">
		{tag && <span class="link-card__tag">{tag}</span>}
		<span class="link-card__title">{title}</span>
		<span class="link-card__desc">{description}</span>
		<span class="link-card__url">{href}</span>
	</div>
	<div class="link-card__image">
		<img src={image} alt="" loading="lazy" />
	</div>
</a>

<style>
	.link-card {
		display: grid;
		grid-template-columns: minmax(0, 1fr) 160px;
		gap: 1rem;
		padding: 0.9rem 1rem;
		border-radius: 16px;
		border: 1px solid rgba(148, 163, 184, 0.25);
		background: rgba(15, 23, 42, 0.7);
		box-shadow: 0 10px 24px rgba(2, 6, 23, 0.25);
		text-decoration: none;
		color: inherit;
		margin: 0.9rem 0;
		transition: transform 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
	}
	.link-card:hover {
		transform: translateY(-2px);
		border-color: rgba(56, 189, 248, 0.45);
		box-shadow: 0 16px 28px rgba(2, 6, 23, 0.35);
	}
	.link-card__content {
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
		min-width: 0;
	}
	.link-card__tag {
		font-size: 0.65rem;
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: #94a3b8;
	}
	.link-card__title {
		font-size: 1rem;
		font-weight: 700;
		color: #f8fafc;
		line-height: 1.3;
	}
	.link-card__desc {
		font-size: 0.9rem;
		color: #cbd5f5;
		line-height: 1.4;
	}
	.link-card__url {
		font-size: 0.75rem;
		color: #94a3b8;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}
	.link-card__image {
		width: 160px;
		height: 100px;
		border-radius: 12px;
		overflow: hidden;
		border: 1px solid rgba(148, 163, 184, 0.2);
		background: rgba(2, 6, 23, 0.6);
	}
	.link-card__image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}
	@media (max-width: 720px) {
		.link-card {
			grid-template-columns: 1fr;
		}
		.link-card__image {
			width: 100%;
			height: 160px;
		}
	}
</style>
